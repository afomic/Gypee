<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.afomic.group.quickAccess">
    <include
        android:id="@+id/quick_toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:padding="@dimen/surface_margin"
        android:layout_margin="@dimen/surface_margin"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        android:elevation="@dimen/elevation_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Level"
            android:textSize="@dimen/text_size"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="100"
                android:id="@+id/rb_level_hundred"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="200"
                android:id="@+id/rb_level_two_hundred"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="300"
                android:id="@+id/rb_level_three_hundred"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="400"
                android:id="@+id/rb_level_four_hundred"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="500"
                android:id="@+id/rb_level_five_hundred"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/surface_margin"
        android:background="@color/backgroundColor"
        android:elevation="@dimen/elevation_size"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/surface_margin"
        android:layout_marginRight="@dimen/surface_margin"
        android:layout_marginBottom="@dimen/surface_margin">
        <TextView
            android:textSize="@dimen/text_size"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:text="Semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="First"
                android:id="@+id/rb_semester_first"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            S<RadioButton
            android:text="Second"
            android:id="@+id/rb_semester_second"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:padding="@dimen/surface_margin"
        android:elevation="@dimen/elevation_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/surface_margin"
        android:layout_marginRight="@dimen/surface_margin">
        <TextView
            android:textSize="@dimen/text_size"
            android:textColor="@color/textColor"
            android:text="Department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/sp_quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>

